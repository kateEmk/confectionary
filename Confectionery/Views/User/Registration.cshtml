@using Confectionery.Models
@model RegistrationViewModel
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
</head>
<body>
@{
    ViewData["Title"] = "Privacy Policy";
}
<div id="Registr" class="container-fluid mt-5 mb-5">
<section class="vh-100">
  <div class="container w-100">
    <div class="row d-flex justify-content-center align-items-center h-100 w-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div id="BackgroundReg" class="card-body p-md-5">
            <div class="row justify-content-center">
                <div class="col-md-15 col-lg-6 col-xl-5 order-2 order-lg-1">

                    <div class="row mb-5 mx-md-4 mt-4">
                        <a class="text-center h4 fw-bold col-6 text-decoration-underline text-black" asp-controller="User" asp-action="Registration">Регистрация</a>
                        <a class="text-center h4 fw-bold col-6 text-decoration-none text-black" asp-controller="User" asp-action="Autorisation">Войти</a>
                    </div>

                    <form asp-controller="User" asp-action="Registration" method="post" class="mx-1 mx-md-4">

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <label asp-for="Name" class="form-label">Имя</label>
                                <input asp-for="Name" type="text" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <label asp-for="Email" class="form-label">Электронная почта</label>
                                <input asp-for="Email" onerror="" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <label asp-for="Password" class="form-label">Пароль</label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <label asp-for="RepeatPassword" class="form-label">Повторите пароль</label>
                                <input asp-for="RepeatPassword" type="password" class="form-control" />
                                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" class="btn btn-primary btn-lg">Зарегистрироваться</button>
                        </div>

                    </form>

                </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</div>
</body>
</html>