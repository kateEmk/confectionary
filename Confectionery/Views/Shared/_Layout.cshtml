<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Confectionery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SSite.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Confectionery.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm fixed-top navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 headerMain" id="HeaderScroll">
            <div class="container-md">
                <a id="logo" class="logo navbar-brand fw-bold fs-3" asp-area="" asp-controller="Home" asp-action="Main">Confectionery</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @if (User.Identity is not null && User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a id="itemNavBar" class="nav-link fs-2" asp-area="" asp-controller="Home" asp-action="Main">Главная</a>
                                </li>
                                <li class="nav-item">
                                    <a id="itemNavBar" class="nav-link fs-2" asp-area="" asp-controller="Admin" asp-action="PanelCompany">Панель администратора</a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a id="itemNavBar" class="nav-link fs-2" asp-area="" asp-controller="Home" asp-action="Main">Главная</a>
                                </li>
                                <li class="nav-item">
                                    <a id="itemNavBar" class="nav-link fs-2" asp-area="" asp-controller="User" asp-action="Account">Аккаунт</a>
                                </li>
                                <li class="nav-item">
                                    <a id="itemNavBar" class="nav-link fs-2" asp-area="" asp-controller="User" asp-action="Bascet">Корзина</a>
                                </li>
                            </ul>

                        }

                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a id="itemNavBar" class="nav-link fs-2" asp-area="" asp-controller="Home" asp-action="Main">Главная</a>
                            </li>
                            <li class="nav-item">
                                <a id="itemNavBar" class="nav-link fs-2" asp-area="" asp-controller="User" asp-action="Registration">Вход</a>
                            </li>
                        </ul>
                    }
                    <form class="d-flex" role="search" action="/">
                            <input type="text" class="form-control me-2" maxlength="255" name="productName" placeholder="Поиск товаров" />
                            <input type="submit" class="btn" value="Найти" />
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container px-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Confectionery - <a asp-area="" asp-controller="Home" asp-action="Privacy">Ермаченок Екатерина, гр. 0к9391. МРК</a>
        </div>
    </footer>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("pageScripts", required: false)
</body>
</html>
